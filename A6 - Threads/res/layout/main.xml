<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">
    <LinearLayout android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:id="@+id/progressBars">
        <ProgressBar style="?android:attr/progressBarStyleHorizontal" android:layout_height="wrap_content" android:id="@+id/ProgressBar1" android:layout_width="match_parent"></ProgressBar>
        <ProgressBar style="?android:attr/progressBarStyleHorizontal" android:layout_height="wrap_content" android:id="@+id/ProgressBar2" android:layout_width="match_parent"></ProgressBar>
        <ProgressBar style="?android:attr/progressBarStyleHorizontal" android:layout_height="wrap_content" android:id="@+id/ProgressBar3" android:layout_width="match_parent"></ProgressBar>
        <ProgressBar style="?android:attr/progressBarStyleHorizontal" android:layout_height="wrap_content" android:id="@+id/ProgressBar4" android:layout_width="match_parent"></ProgressBar>
        <ProgressBar style="?android:attr/progressBarStyleHorizontal" android:layout_height="wrap_content" android:id="@+id/ProgressBar5" android:layout_width="match_parent"></ProgressBar>
        <ProgressBar style="?android:attr/progressBarStyleHorizontal" android:layout_height="wrap_content" android:id="@+id/ProgressBar6" android:layout_width="match_parent"></ProgressBar>
        <ProgressBar style="?android:attr/progressBarStyleHorizontal" android:layout_height="wrap_content" android:id="@+id/ProgressBar7" android:layout_width="match_parent"></ProgressBar>
        <ProgressBar style="?android:attr/progressBarStyleHorizontal" android:layout_height="wrap_content" android:id="@+id/ProgressBar8" android:layout_width="match_parent"></ProgressBar>
        <ProgressBar style="?android:attr/progressBarStyleHorizontal" android:layout_height="wrap_content" android:id="@+id/ProgressBar9" android:layout_width="match_parent"></ProgressBar>
        <ProgressBar style="?android:attr/progressBarStyleHorizontal" android:layout_height="wrap_content" android:id="@+id/progressBar10" android:layout_width="match_parent"></ProgressBar>
   </LinearLayout>
   <!-- The sort control buttons -->
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center" android:paddingBottom="15dp">
       	<Button android:id="@+id/sortButton" android:layout_height="wrap_content" android:text="Sort" android:layout_width="150dip"></Button>
        <Button android:id="@+id/resetButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Reset"></Button>
    </LinearLayout>
    
    <!-- The flip card section -->
    <TextView android:id="@+id/cardDisplay" android:text="Card goes here" android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center" android:textSize="30dp"/>
    <LinearLayout android:orientation="horizontal" android:weightSum="1" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center" android:paddingBottom="15dp">
    	<Button android:id="@+id/reStartButton" android:layout_weight=".2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="(re)Start"></Button>
        <Button android:id="@+id/flipButton" android:layout_weight=".2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Flip"></Button>
        <Button android:id="@+id/nextButton" android:layout_weight=".2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Next"></Button>
        <Button android:id="@+id/removeButton" android:layout_weight=".2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Remove"></Button>
    </LinearLayout>

	<!-- The clock text -->
    <TextView android:id="@+id/clockText" android:text="Clock goes here" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_height="fill_parent" android:layout_width="fill_parent"></TextView>
</LinearLayout>
