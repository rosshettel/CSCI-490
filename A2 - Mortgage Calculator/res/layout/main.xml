<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">
    <TableLayout android:layout_width="match_parent" android:id="@+id/tableLayout1" android:stretchColumns="1" android:layout_height="wrap_content">
        <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="right">
            <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:text="Mortgage" android:id="@+id/textView1" android:layout_height="wrap_content" android:layout_width="wrap_content"></TextView>
            <EditText android:inputType="numberDecimal" android:id="@+id/mortgage_input" android:layout_height="wrap_content" android:layout_width="wrap_content"></EditText>
        </TableRow>
        <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:text="Interest" android:id="@+id/textView2" android:layout_height="wrap_content" android:layout_width="wrap_content" android:gravity="right"></TextView>
            <EditText android:inputType="numberDecimal" android:id="@+id/interest_input" android:layout_height="wrap_content" android:layout_width="wrap_content">
                <requestFocus></requestFocus>
            </EditText>
        </TableRow>
        <TableRow android:id="@+id/tableRow3" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:text="Term" android:id="@+id/textView3" android:layout_height="wrap_content" android:layout_width="wrap_content" android:gravity="right|fill_vertical"></TextView>
            <EditText android:inputType="numberDecimal" android:id="@+id/term_input" android:layout_height="wrap_content" android:layout_width="wrap_content"></EditText>
        </TableRow>
        <TableRow android:id="@+id/tableRow4" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button android:text="Clear" android:id="@+id/clear_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:onClick="clearInputs"></Button>
            <Button android:text="Calculatron!" android:id="@+id/calculate_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:onClick="calculateMortgage"></Button>
        </TableRow>
    </TableLayout>
    <TextView android:text="TextView" android:id="@+id/output_text" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="0.26"></TextView>
    <TextView android:text="TextView" android:id="@+id/error_text" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="0.37"></TextView>
</LinearLayout>
